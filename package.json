{
  "name": "BattleShip Game Multiplayer",
  "version": "2.0.0",
  "description": "A multiplayer naval combat game with real-time battles",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "setup": "node setup.js",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/server.js",
    "client": "webpack serve --open --config webpack.dev.js",
    "dev": "npm run start",
    "build": "npm run babel && webpack --config webpack.prod.js",
    "babel": "babel src -d dist",
    "test": "jest",
    "watch-tests": "jest --watch --onlyChanged __tests__",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "gh-deploy": "git push origin :gh-pages && git subtree push --prefix dist origin gh-pages",
    "gh-deploy-init": "git push origin && git subtree push --prefix dist origin gh-pages"
  },
  "keywords": [
    "battleship",
    "multiplayer",
    "game",
    "websocket",
    "real-time"
  ],
  "author": "Tony Fred",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.1.3",
    "html-webpack-plugin": "^5.5.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^5.10.0"
  }
}
